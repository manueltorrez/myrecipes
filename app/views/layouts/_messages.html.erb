<div class="row">
    <div class="col-md-8 offset-2">
        <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name %> alert-dismissible">
            <%= msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
            
        <% end %>
    </div>
</div>
