<%= render 'shared/page_title', title: "Create a new recipe" %>

<% if @recipe.errors.any? %>

    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="card bg-danger text-white">
                <div class="card-header">
                    <h2 class="card-title">
                        <%= pluralize(@recipe.errors.count, "error") %>
                        prohibited this <%= @recipe.class %> from being saved:
                    </h2>
                    <div class="card-block">
                        <ul>
                            <% @recipe.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    
<% end %>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group col-md-8 offset-2">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
            </div>

            <div class="form-group col-md-8 offset-2">
                <%= f.label :description %>
                <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Enter steps to create recipe" %>
            </div>

            <div class="form-group col-md-8 offset-2">
                <%= f.submit class: "btn btn-primary btn-xlarge" %>
            </div>
        <% end %>
        <div class="col-md-4 offset-4 color-match">
            [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
        </div>
    </div>
</div>