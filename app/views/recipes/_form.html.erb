<%= render 'shared/errors', obj: @recipe %>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group col-md-8 offset-2">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control", maxlength: 60, placeholder: "Name of recipe", autofocus: true %>
            </div>

            <div class="form-group col-md-8 offset-2">
                <%= f.label :description %>
                <%= f.text_area :description, class: "form-control", rows: 10, maxlength: 500, placeholder: "Enter steps to create recipe" %>
            </div>

            <div class="form-group col-md-8 offset-2">
                <%= f.submit class: "btn btn-primary btn-xlarge" %>
            </div>
        <% end %>
        <div class="col-md-4 offset-4 color-match">
            [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
        </div>
    </div>
</div>